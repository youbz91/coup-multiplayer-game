    private async Task PerformAction(ActionType action, string? targetConnectionId)
    {
        try
        {
            await AudioService.PlayClickAsync();
            await GameService.PerformActionAsync(new ActionDto
            {
                Action = action,
                TargetConnectionId = targetConnectionId
            });

            // Track action statistics
            await StatisticsService.RecordActionAsync(action);

            // Track role usage when claiming a role
            if (action == ActionType.Tax)
                await StatisticsService.RecordRoleAsync(Role.Duke);
            else if (action == ActionType.Assassinate)
                await StatisticsService.RecordRoleAsync(Role.Assassin);
            else if (action == ActionType.Steal)
                await StatisticsService.RecordRoleAsync(Role.Captain);
            else if (action == ActionType.Exchange)
                await StatisticsService.RecordRoleAsync(Role.Ambassador);
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error performing action: {ex.Message}";
        }
    }

